# Configuration universelle des Ã©diteurs - HoneyPot Pro Max
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,html,css}]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{yml,yaml}]
indent_size = 2

[*.ps1]
charset = utf-8-bom
end_of_line = crlf
indent_size = 4

[*.{bat,cmd}]
charset = utf-8
end_of_line = crlf
indent_size = 2
